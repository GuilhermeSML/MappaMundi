<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Leaflet Map - World View</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
</head>
<body class="h-screen bg-gray-100">
  <div class="flex h-full">
    <!-- Map Section -->
    <div id="map" class="flex-1 h-full"></div>

    <!-- Text Section -->
    <div class="flex items-center justify-center p-4 w-1/3 bg-white shadow-lg">
      <div>
        <h1 class="text-4xl font-bold text-gray-700"><%= title %></h1><br/>
        <p class="mt-2 text-lg text-gray-600"><%= description %></p>
        <br/><br/>
        <p class="mt-2 text-lg text-gray-600"><b>How to play:</b> <%= howToPlay %></p>
        <br/><br/>
        <p class="mt-2 text-lg text-gray-600"><b>Victory prize:</b> <%= victoryPrize %></p>
        <br/><br/>
        <p class="mt-2 text-lg text-gray-600"><b>Start:</b> <%= startText %></p>

        <!-- Button to Check Coordinates -->
        <button id="checkBtn" class="mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700">Check Coordinates</button>

        <!-- Feedback Message -->
        <p id="feedback" class="mt-4 text-lg text-gray-600"></p>
      </div>
    </div>
  </div>

  <!-- Load Leaflet JavaScript first -->
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

  <!-- Custom JavaScript embedded in the same file -->
  <script>
    // Initialize the map, centered in Europe with a zoom level to show the whole world
    const map = L.map('map').setView([20, 0], 3); // Latitude/Longitude for Europe; zoom level 3 for global view

    // Add OpenStreetMap tiles
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19,
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Variable to store the current marker
    let currentMarker = null;

    // Correct coordinates (for example, the coordinates for Portugal)
    const correctCoords = { lat: 39.3999, lng: -8.2245 }; // Portugal's approximate center

    // Add event listener to map to allow users to add a marker on click
    map.on('click', function(e) {
      const lat = e.latlng.lat;
      const lng = e.latlng.lng;

      // If there's already a marker, remove it
      if (currentMarker) {
        map.removeLayer(currentMarker);
      }

      // Create a new marker at the clicked location
      currentMarker = L.marker([lat, lng]).addTo(map);

      // Optional: Add a popup to the marker
      currentMarker.bindPopup("<b>You clicked here!</b>").openPopup();
    });

    // Add event listener for the button click
    document.getElementById('checkBtn').addEventListener('click', function() {
      if (currentMarker) {
        const markerCoords = currentMarker.getLatLng();

        // Compare the marker's coordinates with the correct coordinates
        const isCorrect = validateCoordinates(markerCoords.lat, markerCoords.lng);

        // Display feedback to the user
        const feedbackElement = document.getElementById('feedback');
        if (isCorrect) {
          feedbackElement.textContent = "Correct! You found the right location.";
          feedbackElement.classList.add("text-green-600");
          feedbackElement.classList.remove("text-red-600");
        } else {
          feedbackElement.textContent = "Incorrect! Try again.";
          feedbackElement.classList.add("text-red-600");
          feedbackElement.classList.remove("text-green-600");
        }
      } else {
        alert("Please click on the map to place a marker first!");
      }
    });

    // Function to validate the coordinates (simple comparison)
    function validateCoordinates(lat, lng) {
      const tolerance = 0.1; // Allowable tolerance in degrees (for simplicity)
      return (
        Math.abs(lat - correctCoords.lat) < tolerance &&
        Math.abs(lng - correctCoords.lng) < tolerance
      );
    }
  </script>
</body>
</html>
